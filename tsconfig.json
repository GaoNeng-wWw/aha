{
  "compilerOptions": {
    "target": "es2016", 
    "module": "ES2022", 
    "moduleResolution": "bundler",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["vitest"],
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/global.d.ts"],
  "exclude": ["node_modules"]
}
