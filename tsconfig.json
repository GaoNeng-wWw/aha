{
  "compilerOptions": {
    "target": "es2016", 
    "module": "ES2022", 
    "moduleResolution": "bundler",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vitest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
